<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="4dp"
      android:foreground="?selectableItemBackground"
      android:clickable="true"
      app:cardBackgroundColor="@color/whiteColor"
      app:cardElevation="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_car_navigator"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:text="Вызвать автокомиссара"
          android:textColor="@color/greyColor"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:foreground="?selectableItemBackground"
      android:clickable="true"
      app:cardBackgroundColor="@color/whiteColor"
      app:cardElevation="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_rupor"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:text="Сообщить о ДТП"
          android:textColor="@color/greyColor"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:foreground="?selectableItemBackground"
      android:clickable="true"
      app:cardBackgroundColor="@color/whiteColor"
      app:cardElevation="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_help_circle"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:text="Позвать на помощь"
          android:textColor="@color/greyColor"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:foreground="?selectableItemBackground"
      android:clickable="true"
      app:cardBackgroundColor="@color/whiteColor"
      app:cardElevation="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_location_navigator"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:text="Пометить яму"
          android:textColor="@color/greyColor"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:foreground="?selectableItemBackground"
      android:clickable="true"
      app:cardBackgroundColor="@color/whiteColor"
      app:cardElevation="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_take_note"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:text="Оставить комментарий"
          android:textColor="@color/greyColor"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:foreground="?selectableItemBackground"
      android:clickable="true"
      app:cardBackgroundColor="@color/whiteColor"
      app:cardElevation="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_close_sheet"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:text="Закрыть"
          android:textColor="@color/greyColor"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>